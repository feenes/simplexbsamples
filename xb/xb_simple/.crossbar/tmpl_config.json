{
  "controller": {}, 
  "workers": [
    {
      "type": "router", 
      "realms": [
        {
          "name": "realm1", 
          "roles": [
            {
              "name": "anonymous", 
              "permissions": [
                {
                  "uri": "*", 
                  "publish": true, 
                  "subscribe": true, 
                  "call": true, 
                  "register": true
                }
              ]
            }
          ]
        }
      ], 
      "transports": [
        {
          "type": "web", 
          "endpoint": {
            "type": "tcp", 
            "port": 8080
          }, 
          "paths": {
            "/": {
              "type": "static", 
              "directory": "../static"
            }, 
            "xbst": {
              "type": "static", 
              "directory": "../static"
            }, 
            "ws": {
              "type": "websocket"
            }, 
            "publish": {
              "type": "publisher", 
              "realm": "realm1", 
              "role": "anonymous"
            }, 
            "call": {
              "type": "caller", 
              "realm": "realm1", 
              "role": "anonymous"
            }, 
            "lp": {
              "type": "longpoll", 
              "options": {
                "debug": true, 
                "debug_transport_id": "snafuk"
              }
            }, 
            "cgi": {
              "type": "cgi", 
              "directory": "../cgi", 
              "processor": "$$$PYTHON$$$"
            }
          }
        }
      ]
    }
  ]
}
